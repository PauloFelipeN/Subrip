@model subrip.Models.Subtitle
@{
    ViewData["Title"] = "Home Page";
}

@section Scripts{
    <script src="~/js/mask.js"></script>
}

<div class="col-lg-6">
    <div class="card">

        <div class="card-header">
            SubRip Subtitles Adjuster
        </div>
        <form method="post" asp-controller="home" asp-action="upload" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body card-block">
                <div class="has-success form-group">
                    <input class="form-control-file" asp-for="File" type="file" name="file" placeholder="no file chosen" />
                </div>
                <div class="has-success form-group">
                    <input class="form-control" type="text" asp-for="Offset" OnKeyUp="mascaraData(this);" placeholder="hh:mm:ss,ms" />
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn-principal">Submit</button>
                    <a asp-controller="History" asp-action="index">open history →</a>
                </div>
            </div>
        </form>
    </div>
</div>




